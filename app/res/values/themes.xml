<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- snmiley dialog -->
    <style name="smileyDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/conversation_smiley_grid_round</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <!-- momo theme ============================================= -->
    <style name="MoMoTheme">
        <item name="android:listViewStyle">@style/ListView</item>
        <item name="android:expandableListViewStyle">@style/ListView</item>
        <item name="android:textViewStyle">@style/TextView</item>
        <item name="android:editTextStyle">@style/EditText</item>
        <item name="android:buttonStyle">@style/ButtonView</item>
        <item name="android:checkboxStyle">@style/CheckBox</item>
        <!-- <item name="android:radioButtonStyle">@style/RadioButton</item> -->
    </style>

    <!-- list view -->
    <style name="ListView" parent="@android:style/Widget.ListView">
        <item name="android:background">@color/list_default_normal</item>
        <item name="android:cacheColorHint">@color/transparent</item>
        <!-- <item name="android:divider">@drawable/list_divider</item> -->
        <item name="android:dividerHeight">1px</item>
        <item name="android:divider">@color/list_divider</item>
        <!-- <item name="android:listSelector">@drawable/list_selector</item>-->
        <item name="android:listSelector">@drawable/list_selector_lighter</item>
    </style>

    <!-- text view -->
    <style name="TextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- edit text -->
    <style name="EditText" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/edit_text_background</item>
    </style>

    <!-- button view -->
    <style name="ButtonView" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingTop">12dip</item>
        <item name="android:paddingBottom">12dip</item>
        <item name="android:paddingLeft">5dip</item>
        <item name="android:paddingRight">5dip</item>
    </style>

    <!-- check box -->
    <style name="CheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/check_box_selector</item>
    </style>

    <style name="GroupSmsCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/group_sms_check_box_selector</item>
    </style>

    <!-- ======================================================== -->

</resources>
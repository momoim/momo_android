<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="#99000000"
  android:gravity="center">
    
    <LinearLayout android:id="@+id/layout_btn_mo_share" 
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginLeft="15dip"
    	android:layout_marginRight="13dip"
    	android:orientation="vertical"
		android:background="@drawable/mo_ic_share">
			
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="6dip"
			android:textColor="#1faed5"
			android:textSize="20sp"
			android:text="发起MO分享"/>
			
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/black"
			android:layout_marginLeft="6dip"
			android:layout_marginTop="12dip"
			android:textSize="12sp"
			android:text="将内容分享给您的手机联系人，并提醒特定联系人关注。"/>
								    		
    </LinearLayout>

    <LinearLayout android:id="@+id/layout_btn_mo_sms" 
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginLeft="15dip"
    	android:layout_marginRight="13dip"    	
    	android:layout_marginTop="35dip"
    	android:orientation="vertical"
    	android:background="@drawable/mo_ic_msg">
    			
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="6dip"
			android:textColor="#1faed5"				
			android:textSize="20sp"
			android:text="发送MO私信"/>
			
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/black"
			android:layout_marginLeft="6dip"
			android:layout_marginTop="12dip"
			android:textSize="12sp"
			android:text="一对一或一对多的私密聊天"/>
								
    </LinearLayout>
    
</LinearLayout>

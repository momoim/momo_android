<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:paddingTop="3dip"
	android:paddingBottom="3dip" android:gravity="center_vertical"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:focusable="false">
	
	<ImageView android:id="@+id/arrow"
		android:layout_marginLeft="15dip" android:src="@drawable/refresh_down"
		android:layout_width="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_centerVertical="true"
		android:layout_height="wrap_content" android:visibility="gone"/>
	
	<LinearLayout 
	android:layout_centerInParent="true"
	android:orientation="vertical"  android:gravity="center"
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content">
		<TextView android:id="@+id/dynamic_title" android:textColor="@color/blue_font"
			android:layout_width="fill_parent" android:gravity="center" android:layout_height="wrap_content" />
			
		<TextView android:id="@+id/dynamic_exif" 
			android:layout_centerHorizontal="true" android:layout_marginTop="5dip"
			android:textColor="#ff000000" android:textSize="12sp"
			android:layout_width="fill_parent" android:gravity="center"
			android:layout_height="wrap_content" />
	</LinearLayout>
</RelativeLayout>

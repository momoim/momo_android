<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical" android:padding="@dimen/padding_left_list_item"
	android:gravity="top">
	<TextView android:id="@+id/location_name"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:textColor="@color/black" android:textSize="20dip"
		android:singleLine="true" android:includeFontPadding="false"
		android:ellipsize="end" android:layout_marginRight="40dip" />
	<TextView android:id="@+id/location_addr"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:singleLine="true" android:textColor="@color/im_grey"
		android:textSize="14dip" android:includeFontPadding="false" />
</LinearLayout>
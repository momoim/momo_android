<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:background="@android:drawable/alert_light_frame">
	<TableRow>
		<Button android:layout_height="wrap_content"
			android:layout_weight="1" android:id="@+id/btn_location" android:text="地理位置"
			android:minWidth="80dp" android:minHeight="80dp" />
		<Button android:layout_height="wrap_content"
			android:layout_weight="1" android:id="@+id/btn_card" android:text="发送名片"
			android:minWidth="80dp" android:minHeight="80dp" />
		<Button android:layout_height="wrap_content"
			android:layout_weight="1" android:id="@+id/btn_refresh" android:text="刷新"
			android:minWidth="80dp" android:minHeight="80dp" />
		<Button android:layout_height="wrap_content"
			android:layout_weight="1" android:id="@+id/btn_delete" android:text="清除"
			android:minWidth="80dp" android:minHeight="80dp" />
	</TableRow>
</TableLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@color/white"
	android:orientation="vertical">
	<RelativeLayout 
		android:layout_width="fill_parent"  
		android:layout_height="wrap_content"
		android:background="@drawable/title_background">
		<cn.com.nd.momo.view.widget.MMScrollTextView
			android:id="@+id/txt_name"
			android:textColor="#ffffffff" 
			android:drawablePadding="5dip" 
			android:layout_centerVertical="true"  
			android:layout_centerInParent="true" 
			android:textSize="20sp"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"/>
			
		<ImageButton android:id="@+id/btn_send" 
			android:src="@drawable/btn_dynamic_publish"
			android:background="@drawable/dynamic_image_btn_style"
			android:paddingLeft="10dip" 
			android:paddingRight="10dip" 
			android:paddingTop="5dip" 
			android:paddingBottom="5dip"
			android:layout_alignParentRight="true"  
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content"
			android:layout_centerVertical="true" 
			android:enabled="false" />
	</RelativeLayout>
	<TextView
		android:id="@+id/txt_sms_tip"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="3dip"
		android:layout_marginBottom="3dip"
		android:layout_gravity="center_vertical"
		android:textSize="18sp"
		android:background="@color/white"
		android:paddingLeft="10dip"
		android:paddingTop="5dip"
		android:visibility="gone"
		android:text="@string/group_sms_range"
		/>
	<LinearLayout
		android:id="@+id/layout_activity_member_select"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:paddingLeft="10dip"
		android:orientation="vertical">
		<TextView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="3dip"
			android:layout_marginBottom="3dip"
			android:layout_gravity="center_vertical"
			android:textSize="18sp"
			android:background="@color/white"
			android:text="@string/group_sms_range"
			/>
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="3dip"
			android:orientation="horizontal">
			<CheckBox android:id="@+id/chk_activity_join"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:checked="true"
				    android:minHeight="24dip"
				    android:minWidth="24dip"
				    android:focusable="false"
				    android:layout_weight="1"
				    android:background="@color/white"
				    android:paddingLeft="24dip"
				    android:textColor="@color/black"
				    android:text="@string/activity_apply_type_join"
				    style="@style/GroupSmsCheckBox"
				    />
			<CheckBox android:id="@+id/chk_activity_interest"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:checked="true"
				    android:minHeight="24dip"
				    android:minWidth="24dip"
				    android:focusable="false"
				    android:layout_weight="1"
				    android:background="@color/white"
				    android:paddingLeft="24dip"
				    android:textColor="@color/black"
				    android:text="@string/activity_apply_type_interest"
				    style="@style/GroupSmsCheckBox"
				    />
		</LinearLayout>
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="3dip"
			android:orientation="horizontal">
			<CheckBox android:id="@+id/chk_activity_not_join"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:minHeight="24dip"
				    android:minWidth="24dip"
				    android:focusable="false"
				    android:layout_weight="1"
				    android:background="@color/white"
				    android:paddingLeft="24dip"
				    android:textColor="@color/black"
				    android:text="@string/activity_apply_type_not_join"
				    style="@style/GroupSmsCheckBox"
				    />
			<CheckBox android:id="@+id/chk_activity_wait_confirm"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:minHeight="24dip"
				    android:minWidth="24dip"
				    android:focusable="false"
				    android:layout_weight="1"
				    android:background="@color/white"
				    android:paddingLeft="24dip"
				    android:textColor="@color/black"
				    android:text="@string/activity_apply_type_wait_confirm"
				    style="@style/GroupSmsCheckBox"
				    />
		</LinearLayout>
	</LinearLayout>
	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent" 
		android:layout_weight="1">
		<EditText 
			android:id="@+id/sms_content" 
			android:maxLength="140"
			android:hint="附言.."  
			android:gravity="left|top"
			android:layout_width="fill_parent"
			android:padding="10dip"
			android:layout_height="fill_parent"
			android:layout_weight="1" />
			
		<TextView android:id="@+id/txt_keyboard" 
			android:paddingTop="3dip" 
			android:paddingBottom="3dip" 
			android:layout_width="wrap_content" 
			android:text="140" 
			android:textColor="#C9C9C9"
			android:layout_height="wrap_content" 
			android:layout_alignParentRight="true" 
			android:paddingLeft="20dip" 
			android:paddingRight="20dip"
			android:layout_alignParentBottom="true"
			android:textSize="50sp"
			android:layout_marginBottom="5dip"/>
	</RelativeLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content">
    
	<LinearLayout android:id="@+id/layout_search_bar" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:padding="3dip"
		android:background="@drawable/searchbox_bg">
  	  	
	  	<EditText android:id="@+id/txt_search" 
			android:layout_width="fill_parent"
			android:layout_height="40dip"
			android:layout_marginRight="40dip"
			android:background="@drawable/searchbox_edit"
			android:drawableLeft="@drawable/ic_search"
			android:focusable="true"
			android:textColor="@color/black"
			android:singleLine="true"
			android:hint="查找联系人"/>
	    		
	</LinearLayout>
	
	<TextView android:id="@+id/txt_contact_list_count"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"/>
    
</LinearLayout>
